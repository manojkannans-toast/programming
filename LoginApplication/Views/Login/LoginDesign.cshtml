@{
}
@model LoginViewModel

@using (Html.BeginForm("validate", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <style>
        .formContainer {
            background-color: lightblue;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .formWrapper {
            background-color: white;
            padding: 20px 60px;
            border-radius: 10px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .logo {
            font-style: italic;
            font-size: 25px;
            font-weight: bold;
            color: green;
        }

        form {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            gap: 15px;
        }

        .text_type {
            padding: 15px;
            border: none;
            border-bottom: 1px solid #a7bcff;
        }

        button {
            color: white;
            font-weight: bold;
            border-radius: 10px;
            background-color: green;
            height: 40px;
            width: 180px;
        }

        .login_hyper {
            text-underline-position: below;
            color: red;
            text-decoration: underline;
        }

        .login_hyper:hover {
           cursor: pointer;
        }
    </style>

    <div class = "formContainer">
        <div class = "formWrapper">
            <span class = "logo">Login</span><br/>
                @Html.TextBoxFor(m => m.UserName, new { @class = "text_type" ,@placeholder = "UserName"})
                @Html.ValidationMessageFor(m => m.UserName)
                @Html.PasswordFor(m => m.Password, new { @class = "text_type" ,@placeholder = "Password"})
                @Html.ValidationMessageFor(m => m.Password)<br/>
                <button class='signin' onClick={SignIn}> Sign In</button>
            <p>Don't have an account? <span class="login_hyper">Register</span></p>
        </div>
    </div>
}